{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "MyGlobalTable": {
            "Type": "AWS::DynamoDB::GlobalTable",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "PK",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "SK",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "GSI1PK",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "GSI1SK",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "GlobalSecondaryIndexes": [
                    {
                        "IndexName": "GSI1",
                        "KeySchema": [
                            {
                                "AttributeName": "GSI1PK",
                                "KeyType": "HASH"
                            },
                            {
                                "AttributeName": "GSI1SK",
                                "KeyType": "RANGE"
                            }
                        ],
                        "Projection": {
                            "ProjectionType": "ALL"
                        }
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "PK",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "SK",
                        "KeyType": "RANGE"
                    }
                ],
                "Replicas": [
                    {
                        "Region": "eu-west-1"
                    },
                    {
                        "Region": "eu-west-2"
                    }
                ],
                "TableName": "MyGT",
                "StreamSpecification": {
                    "StreamViewType": "NEW_AND_OLD_IMAGES"
                }
            }
        }
    }
}