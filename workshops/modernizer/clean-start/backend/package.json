{
  "name": "online-shopping-store-backend",
  "version": "1.0.0",
  "description": "Backend API for online shopping store",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=2048 dist/index.js",
    "dev": "nodemon src/index.ts",
    "clean": "rm -rf dist coverage test-results node_modules/.cache && npm cache clean --force",
    "prebuild": "npm run clean:dist",
    "clean:dist": "rm -rf dist",
    "clean:coverage": "rm -rf coverage",
    "clean:test-results": "rm -rf test-results",
    "clean:cache": "rm -rf node_modules/.cache && npm cache clean --force",
    "clean:all": "npm run clean && rm -rf node_modules",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --config=src/test-configs/jest.unit.config.js",
    "test:unit": "jest --config=src/test-configs/jest.unit.config.js",
    "pretest:integration": "npm run db:setup-integration",
    "test:integration": "jest --config=src/test-configs/jest.integration.config.js",
    "pretest:e2e": "npm run build && npm run db:setup-e2e",
    "test:e2e": "jest --config=src/test-configs/jest.e2e.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:report",
    "test:watch": "jest --config=src/test-configs/jest.unit.config.js --watch",
    "test:coverage": "jest --config=src/test-configs/jest.unit.config.js --coverage",
    "test:coverage:all": "npm run test:unit -- --coverage && npm run test:integration -- --coverage && npm run test:e2e -- --coverage",
    "test:report": "node src/test-configs/test-helpers/combined-test-reporter.js",
    "test:report:open": "npm run test:report && open test-results/combined/dashboard.html",
    "db:init": "ts-node src/database/cli.ts init",
    "db:setup-integration": "DB_NAME=online_shopping_store_test_integration npm run db:init",
    "db:setup-e2e": "DB_NAME=online_shopping_store_test_e2e npm run db:init",
    "db:seed": "ts-node src/database/cli.ts seed",
    "db:reset": "ts-node src/database/cli.ts reset",
    "db:clear": "ts-node src/database/cli.ts clear",
    "db:test": "ts-node src/database/cli.ts test"
  },
  "keywords": [
    "ecommerce",
    "api",
    "typescript",
    "express"
  ],
  "author": "Esteban Serna",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}